<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <dependencySets>
    <!-- "suggest" webapp. -->
    <dependencySet>
      <includes>
        <include>${project.groupId}:standalone-ui</include>
      </includes>
      <outputDirectory>webapps/search</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <!-- "solr" webapp. -->
    <dependencySet>
      <includes>
        <include>org.apache.solr:solr</include>
      </includes>
      <outputDirectory>webapps/solr</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <!-- Solr configuration. -->
    <dependencySet>
      <includes>
        <include>${project.groupId}:solr-configuration</include>
      </includes>
      <outputDirectory>solrconfig/</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <!-- Unpack Jetty files -->
    <dependencySet>
      <includes>
        <include>${project.groupId}:jetty-resources</include>
      </includes>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>jetty/contexts/xwiki.xml</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
</assembly>
