<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>package</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <dependencySets>
    <!-- Phenotips webapp. -->
    <dependencySet>
      <includes>
        <include>${project.groupId}:phenotips-war</include>
      </includes>
      <outputDirectory>webapps/phenotips</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>**/xwiki.js</exclude>
          <exclude>**/livetable.js</exclude>
          <exclude>**/autosave.js</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <!-- Add JDBC driver for the database to use. -->
    <dependencySet>
      <includes>
        <include>org.hsqldb:hsqldb</include>
      </includes>
      <outputDirectory>webapps/phenotips/WEB-INF/lib</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
    <!-- Unpack the pedigree editor -->
    <dependencySet>
      <includes>
        <include>${project.groupId}:pedigree-editor</include>
      </includes>
      <outputDirectory>/webapps/phenotips/resources/uicomponents/</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <!-- Unpack the HSQLDB database files to package it in the distribution -->
    <dependencySet>
      <includes>
        <include>${project.groupId}:database-zip</include>
      </includes>
      <outputDirectory>/data</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <!-- "solr" webapp. -->
    <dependencySet>
      <includes>
        <include>org.apache.solr:solr</include>
      </includes>
      <outputDirectory>webapps/solr</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>WEB-INF/lib/slf4j-jdk14-*.jar</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <!-- Solr configuration. -->
    <dependencySet>
      <includes>
        <include>${project.groupId}:solr-configuration</include>
      </includes>
      <outputDirectory>solrconfig/</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <!-- Use Logback instead of Java SE logging -->
    <dependencySet>
      <includes>
        <include>ch.qos.logback:*</include>
      </includes>
      <outputDirectory>webapps/solr/WEB-INF/lib</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
    <!-- Unpack Jetty files -->
    <dependencySet>
      <includes>
        <include>${project.groupId}:jetty-resources</include>
      </includes>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>jetty/contexts/search.xml</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
  <files>
    <file>
      <source>${basedir}/src/main/resources/xhtml2fo.xsl</source>
      <outputDirectory>webapps/phenotips/WEB-INF/classes</outputDirectory>
    </file>
    <file>
      <source>${basedir}/src/main/resources/logback.xml</source>
      <outputDirectory>webapps/solr/WEB-INF/classes</outputDirectory>
    </file>
    <file>
      <source>${basedir}/src/main/resources/xwiki.js</source>
      <outputDirectory>webapps/phenotips/resources/js/xwiki</outputDirectory>
    </file>
    <file>
      <source>${basedir}/src/main/resources/livetable.js</source>
      <outputDirectory>webapps/phenotips/resources/js/xwiki/table</outputDirectory>
    </file>
    <file>
      <source>${basedir}/src/main/resources/autosave.js</source>
      <outputDirectory>webapps/phenotips/resources/js/xwiki/editors</outputDirectory>
    </file>
  </files>
</assembly>
